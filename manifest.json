{
  "manifest_version": 3,
  "name": "Netflix Ratings (IMDb & Rotten Tomatoes)",
  "version": "1.0",
  "description": "Adds IMDb and Rotten Tomatoes ratings to Netflix movie cards and details page.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.omdbapi.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
